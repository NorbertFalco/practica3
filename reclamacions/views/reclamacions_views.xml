
<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Define the action for reclamacio -->
        <record id="action_reclamacio" model="ir.actions.act_window">
            <field name="name">Reclamacions</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">reclamacions</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
        </record>

        <!-- Define tree view for reclamacions -->
        <record id="view_reclamacions_tree" model="ir.ui.view">
            <field name="name">reclamacions.tree</field>
            <field name="model">reclamacions</field>
            <field name="arch" type="xml">
                <tree string="Reclamaciones">
                    <!-- Suponiendo que 'customer_name' es el campo del cliente que emite la reclamación -->
                    <field name="user_id" string="Client"/>
                    <field name="ticket_description" string="Descripció"/>
                    <field name="creation_date" string="Data"/>
                    <field name="state" string="Estat"/>
                    <!-- Aquí puedes añadir más campos como necesites -->
                </tree>
            </field>
        </record>

        <record id="closing_reason_action" model="ir.actions.act_window">
        <field name="name">Motius de Tancament o Cancel·lació</field>
        <field name="res_model">closing.reason</field>
        <field name="view_mode">tree,form</field>
    </record>

        <!-- Define a form view for reclamacio -->
        <record id="view_reclamacions_form" model="ir.ui.view">
            <field name="name">reclamacions.form</field>
            <field name="model">reclamacions</field>
            <field name="arch" type="xml">
                <form string="Reclamació">
                    <header>
                        <button string="Obrir" type="object" name="action_open" attrs="{'invisible': [('state', '!=', 'new')]}" class="oe_highlight"/>
                        <button string="Tancar" type="object" name="action_close" attrs="{'invisible': [('state', 'in', ['closed', 'cancelled'])]}" class="oe_highlight"/>
                        <button string="Cancelar" type="object" name="action_cancel" attrs="{'invisible': [('state', 'in', ['closed', 'cancelled'])]}" class="oe_highlight"/>
                        <button string="Reobrir" type="object" name="action_reopen" attrs="{'invisible': [('state', '!=', 'closed')]}" class="oe_highlight"/>
                        <field name="state" widget="statusbar" statusbar_visible="new,in_progress,closed,cancelled"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="title" string="Título"/>
                            <field name="ticket_description" string="Descripció"/>
                            <field name="creation_date" string="Data"/>
                            <field name="user_id" string="Usuari"/>
                            <field name="state" string="Estat"/>
                        </group>
                        <notebook>
                            <page string="Missatges">
                                <field name="missatges_ids" context="{'default_reclamacio_id': active_id}">
                                    <tree editable="bottom">
                                        <field name="author_id" string="Autor"/>
                                        <field name="date" string="Data"/>
                                        <field name="text" string="Text"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>


