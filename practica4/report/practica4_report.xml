<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <template id="report_saleorder_document_custom" inherit_id="sale.report_saleorder_document">
            <xpath expr="//div[@class='page']" position="inside">
                <div>
                    <p><strong>Total Articles:</strong> <span t-esc="doc.total_articles"/></p>
                    <p><strong>Preferred Email:</strong> <span t-esc="doc.preferred_email"/></p>
                </div>
            </xpath>
        </template>
    </data>
</odoo>
